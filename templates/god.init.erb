#!/bin/bash
#
# God
#
# chkconfig: - 85 15
# description: start, stop, restart, status for God
#

RETVAL=0
LOG_DIR="<%= @log_dir %>"
LOG_FILE="${LOG_DIR}/god.log"
RUN_DIR="<%= @run_dir %>"
GLOBAL_CONFIG="<%= @global_config %>"
PID_FILE="${RUN_DIR}/god.pid"
PROG_BINARY="<%= @binary_path -%>"

case "$1" in
    start)
      echo "Starting god..."
      $PROG_BINARY -P $PID_FILE -l $LOG_FILE
      $PROG_BINARY load $GLOBAL_CONFIG
      echo "Done."
      RETVAL=$?
      ;;
    stop)
      echo "Stopping god..."
      kill `cat $PID_FILE`
      RETVAL=$?
      echo "Done."
      ;;
    restart)
      echo "Restarting god..."
      kill `cat $PID_FILE`
      $PROG_BINARY -P $PID_FILE -l $LOG_FILE
      $PROG_BINARY load $GLOBAL_CONFIG
      RETVAL=$?
      echo "Done."
      ;;
    status)
      echo `$PROG_BINARY status`
      RETVAL=$?
      ;;
    *)
      echo "Usage: god {start|stop|restart|status}"
      exit 1
  ;;
esac

exit $RETVAL
